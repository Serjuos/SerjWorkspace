@model IEnumerable<Workspace.Models.Document>
<h2>Список документов</h2>
<table>
    <tr><th>Дата</th><th>Содержание</th><th>Статус</th><th>Вправки</th><th>Тип</th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Date</td>
            <td>@item.Content</td>
            <td>@item.Status</td>
            <td>@item.Changes</td>
            <td>@item.Type</td>
            <td>
            <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">Изменить</a>
            </td>
            <td>
            <form asp-controller="Home" asp-action="Delete" method="post"  asp-route-id="@item.Id">
            <input type="submit" value="Удалить" />
            </form>
            </td>
        </tr>
       
    }
</table>
<p><a asp-action="Create">Добавить документ</a></p>

